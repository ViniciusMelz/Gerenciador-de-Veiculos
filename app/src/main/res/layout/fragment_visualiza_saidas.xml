<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.visualizaSaidasFragment"
    android:background="@color/light_gray">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/wvGrafico"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wvGrafico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bCadastrarSaidas"
        android:orientation="vertical"
        android:id="@+id/divInternaTotalSaidas"
        android:background="@drawable/border_square_radius"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelValorTotalSaidas"
            android:text="Valor Total: "
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemValorTotalSaidas"
            android:text="R$XX,XX"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15dp"
            />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bCadastrarSaidas"
        app:layout_constraintTop_toBottomOf="@id/wvGrafico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divInternaTotalSaidas"
        android:textColor="@color/white"
        android:text="Cadastrar\nSaÃ­da"
        android:backgroundTint="@color/black"
        android:width="170dp"
        android:textSize="50px"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        android:height="78dp"
        android:layout_marginBottom="95dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVisualizaSaidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bCadastrarSaidas"
        tools:listitem="@layout/item_list_row_movimentacoes"
        android:paddingBottom="490dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>