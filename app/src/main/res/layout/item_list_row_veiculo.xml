<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    app:cardCornerRadius="6dp" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivTipoVeiculo"
            android:src="@drawable/ic_roda"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelPlaca"
            android:text="Placa:"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivTipoVeiculo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelMarcaModelo"
            android:text="Marca/Modelo: "
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelPlaca"
            app:layout_constraintStart_toEndOf="@id/ivTipoVeiculo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelAno"
            android:text="Ano: "
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelMarcaModelo"
            app:layout_constraintStart_toEndOf="@id/ivTipoVeiculo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPlaca"
            android:text="XXX-XXXX"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvLabelPlaca"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemMarcaModelo"
            android:text="XXXXXXX"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="4dp"
            android:maxLength="20"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvItemPlaca"
            app:layout_constraintStart_toEndOf="@id/tvLabelMarcaModelo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemAno"
            android:text="XXXX"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvItemMarcaModelo"
            app:layout_constraintStart_toEndOf="@id/tvLabelAno"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelQuilometragem"
            android:text="Kilometragem: "
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelAno"
            app:layout_constraintStart_toEndOf="@id/ivTipoVeiculo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemQuilometragem"
            android:text="XXXXXX"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvItemAno"
            app:layout_constraintStart_toEndOf="@id/tvLabelQuilometragem"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivVeiculoExcluir"
            android:src="@drawable/ic_excluir"
            app:layout_constraintTop_toBottomOf="@id/ivTipoVeiculo"
            app:layout_constraintStart_toEndOf="@id/ivVeiculoEditar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivVeiculoEditar"
            android:src="@drawable/ic_atualizar"
            app:layout_constraintTop_toBottomOf="@id/ivTipoVeiculo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="6dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>