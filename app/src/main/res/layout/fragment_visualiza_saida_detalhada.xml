<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.VisualizaSaidaDetalhadaFragment"
    android:background="@color/light_gray">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="80px"
        android:textStyle="bold"
        android:paddingVertical="30dp"
        android:paddingHorizontal="10dp"
        android:text="VISUALIZAÇÃO DETALHADA"
        android:id="@+id/tvLabelTela"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelTela"
        android:textSize="40px"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Tipo: "
        android:id="@+id/tvLabelTipo"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvLabelTipo"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelTela"
        android:textSize="40px"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:text="XXXXXXXX"
        android:id="@+id/tvItemTipo"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelTipo"
        android:textSize="40px"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Data: "
        android:id="@+id/tvLabelData"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvLabelData"
        app:layout_constraintTop_toBottomOf="@id/tvItemTipo"
        android:textSize="40px"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:text="XX/XX/XX XX:XX"
        android:id="@+id/tvItemData"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelData"
        android:textSize="40px"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Quilometragem: "
        android:id="@+id/tvLabelQuilometragem"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvLabelQuilometragem"
        app:layout_constraintTop_toBottomOf="@id/tvItemData"
        android:textSize="40px"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:text="XXXXXX KM"
        android:id="@+id/tvItemQuilometragem"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelQuilometragem"
        android:textSize="40px"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Valor: "
        android:id="@+id/tvLabelValor"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvLabelValor"
        app:layout_constraintTop_toBottomOf="@id/tvItemQuilometragem"
        android:textSize="40px"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:text="R$XX,XX"
        android:id="@+id/tvItemValor"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelValor"
        android:textSize="40px"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Descrição: "
        android:id="@+id/tvLabelDescricao"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvItemValor"
        android:textSize="40px"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="100dp"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:id="@+id/tvItemDescricao"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvItemDescricao"
        android:textSize="40px"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Média Informada: "
        android:id="@+id/tvLabelMedia"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvLabelMedia"
        app:layout_constraintTop_toBottomOf="@id/tvItemDescricao"
        android:textSize="40px"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:text="XX,XX KM/L"
        android:id="@+id/tvItemMedia"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelMedia"
        android:textSize="40px"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Litros Abastecidos: "
        android:id="@+id/tvLabelLitros"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvLabelLitros"
        app:layout_constraintTop_toBottomOf="@id/tvItemMedia"
        android:textSize="40px"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:text="XX,XX L"
        android:id="@+id/tvItemLitros"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/bVoltar"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:text="Voltar"
        android:backgroundTint="@color/black"
        android:textSize="50px"
        android:textStyle="bold"
        android:height="50dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>